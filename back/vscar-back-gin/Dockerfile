FROM golang:1.25.3-trixie AS builder

WORKDIR /app

COPY go.mod go.sum ./
RUN go mod download

COPY src/ ./src/

RUN CGO_ENABLED=0 GOOS=linux go build -o /app/vscar-back-gin ./src

FROM debian:trixie-slim

RUN groupadd -r appuser && useradd -r -g appuser appuser

COPY --from=builder /app/vscar-back-gin /usr/local/bin/

USER appuser

CMD ["vscar-back-gin"]
